      <input type="text" placeholder="Destination Wallet" />
      <button type="submit">Submit Fraud Attempt</button>
    </form>
  </div>
</section>

<script is:inline>
  window.addEventListener("load", () => {
    const ctx1 = document.getElementById("fraudChart").getContext("2d");
    const ctx2 = document.getElementById("categoryChart").getContext("2d");

    new Chart(ctx1, {
      type: "line",
      data: {
        labels: ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"],
        datasets: [{
          label: "Fraud Attempts",
          data: [12, 19, 9, 17, 14, 10, 22],
          borderColor: "#ff71ce",
          backgroundColor: "rgba(255, 113, 206, 0.2)",
          tension: 0.4,
          pointBackgroundColor: "#fff",
          pointBorderColor: "#ff71ce",
          fill: true,
        }]
      },
      options: {
        plugins: { legend: { labels: { color: "#ccc" } } },
        scales: {
          x: { ticks: { color: "#ccc" } },
          y: { ticks: { color: "#ccc" } },
        }
      }
    });

    new Chart(ctx2, {
      type: "bar",
      data: {
        labels: ["Payments", "Withdrawals", "Deposits", "Transfers", "Failed"],
        datasets: [{
          label: "Transactions",
          data: [3200, 1500, 2100, 1700, 400],
          backgroundColor: [
            "#00e5ff", "#00ffc6", "#ff71ce", "#f5a623", "#ff3b30"
          ],
          borderRadius: 6
        }]
      },
      options: {
        plugins: { legend: { labels: { color: "#ccc" } } },
        scales: {
          x: { ticks: { color: "#ccc" } },
          y: { ticks: { color: "#ccc" } },
        }
      }
    });
  });
</script>

<style lang="scss">
  body {
    margin: 0;
    background: #0e0e1b;
    color: #e0e0f0;
    font-family: 'Orbitron', 'Segoe UI', sans-serif;
  }

  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background: #161625;
    border-bottom: 1px solid #00e5ff;

    .logo {
      font-size: 1.5rem;
      color: #00e5ff;
      font-weight: bold;

      span {
        color: #ff71ce;
      }
    }

    ul {
      list-style: none;
      display: flex;
      gap: 1.5rem;
      flex-wrap: wrap;
      justify-content: center;

      li .link {
        color: #e0f7fa;
        text-decoration: none;
        font-weight: 600;

        &:hover {
          color: #00ffc6;
        }
      }
    }
  }

  .dashboard {
    padding: 2rem;

    &__title {
      font-size: 2.5rem;
      color: #00e5ff;
      text-shadow: 0 0 10px #00e5ff;
      margin-bottom: 2rem;
    }

    .stats {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1.5rem;
      margin-bottom: 3rem;

      .stat {
        background: #1a1a2f;
        padding: 1.5rem;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 229, 255, 0.2);
        text-align: center;
        transition: transform 0.2s ease;

        &:hover {
          transform: scale(1.02);
        }

        h2 {
          font-size: 1rem;
          color: #7fd0ff;
          margin-bottom: 0.5rem;
        }

        p {
          font-size: 1.5rem;
          font-weight: bold;
          color: #fff;
        }
      }
    }

    .chart {
      margin-bottom: 3rem;

      h2 {
        font-size: 1.25rem;
        color: #00ffc6;
        margin-bottom: 1rem;
      }

      canvas {
        width: 100%;
        max-width: 600px;
        background: #161625;
        border-radius: 8px;
        padding: 1rem;
      }
    }

    .live-feed {
      margin-bottom: 3rem;

      h2 {
        font-size: 1.25rem;
        color: #00e5ff;
        margin-bottom: 1rem;
      }

      ul {
        list-style: none;
        padding: 1rem;
        background: #1a1a2f;
        border-radius: 8px;
        border: 1px solid #00e5ff;
        box-shadow: 0 0 10px #00e5ff44;
        color: #e0f7fa;

        li {
          padding: 0.5rem 0;
          border-bottom: 1px solid #2e2e3a;

          &:last-child {
            border-bottom: none;
          }
        }
      }
    }

    .simulator {
      h2 {
        font-size: 1.25rem;
        color: #ff71ce;
        margin-bottom: 1rem;
      }

      form {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;

        input {
          flex: 1 1 200px;
          padding: 0.75rem;
          border-radius: 6px;
          border: none;
          background: #222;
          color: #fff;
        }

        button {
          padding: 0.75rem 1.5rem;
          background: #ff71ce;
          color: #fff;
          border: none;
          border-radius: 6px;
          cursor: pointer;
          font-weight: bold;
          transition: background 0.2s ease;

          &:hover {
            background: #e256b6;
          }
        }
      }
    }
  }
</style>
