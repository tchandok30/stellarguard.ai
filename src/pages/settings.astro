<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Settings | StellarGuard AI</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <nav class="navbar">
      <div class="logo">StellarGuard<span>AI</span></div>
      <ul>
        <li><a href="/" class="nav-link">Dashboard</a></li>
        <li><a href="/reports" class="nav-link">Reports</a></li>
        <li><a href="/users" class="nav-link">Users</a></li>
        <li><a href="/ai-insights" class="nav-link">AI Insights</a></li>
        <li><a href="/settings" class="nav-link active">Settings</a></li>
        <li><a href="/logout" class="nav-link">Logout</a></li>
      </ul>
    </nav>

    <section class="settings-page">
      <h1>‚öôÔ∏è Settings</h1>

      <div class="settings-section">
        <h2>üë§ Profile</h2>
        <div class="setting-item">
          <label for="name">Full Name</label>
          <input type="text" id="name" />
        </div>
        <div class="setting-item">
          <label for="email">Email</label>
          <input type="email" id="email" />
        </div>
        <div class="setting-item">
          <label for="profilePic">Profile Picture</label>
          <input type="file" id="profilePic" />
        </div>
      </div>

      <div class="settings-section">
        <h2>üé® Preferences</h2>
        <div class="setting-item">
          <label for="lang">Language</label>
          <select id="lang">
            <option>English</option>
            <option>Espa√±ol</option>
            <option>Fran√ßais</option>
          </select>
        </div>
        <div class="setting-item">
          <label for="darkmode">Enable Dark Mode</label>
          <input type="checkbox" id="darkmode" />
        </div>
      </div>

      <div class="settings-section">
        <h2>üîê Security</h2>
        <div class="setting-item">
          <label for="current-password">Current Password</label>
          <input type="password" id="current-password" />
        </div>
        <div class="setting-item">
          <label for="new-password">New Password</label>
          <input type="password" id="new-password" />
        </div>
      </div>

      <button class="save-btn" onclick="saveSettings()">üíæ Save Changes</button>
    </section>

    <!-- Confirmation Modal -->
    <div id="confirmModal" class="modal">
      <div class="modal-content">
        <p>‚úÖ Settings Saved Successfully!</p>
        <button onclick="closeModal()">Close</button>
      </div>
    </div>

    <script>
      const nameInput = document.getElementById('name');
      const emailInput = document.getElementById('email');
      const langSelect = document.getElementById('lang');
      const darkmodeCheckbox = document.getElementById('darkmode');

      // Load settings on page load
      window.onload = () => {
        nameInput.value = localStorage.getItem('name') || 'Jane Doe';
        emailInput.value = localStorage.getItem('email') || 'user@stellarguard.ai';
        langSelect.value = localStorage.getItem('lang') || 'English';
        darkmodeCheckbox.checked = localStorage.getItem('darkmode') === 'true';
      };

      function saveSettings() {
        localStorage.setItem('name', nameInput.value);
        localStorage.setItem('email', emailInput.value);
        localStorage.setItem('lang', langSelect.value);
        localStorage.setItem('darkmode', darkmodeCheckbox.checked);

        document.getElementById('confirmModal').style.display = 'flex';
      }

      function closeModal() {
        document.getElementById('confirmModal').style.display = 'none';
      }
    </script>

    <style lang="scss">
      body {
        margin: 0;
        font-family: 'Orbitron', sans-serif;
        background: #0e0e1b;
        color: #e0e0f0;
      }

      .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        background: #161625;
        border-bottom: 1px solid #00e5ff;

        .logo {
          font-size: 1.5rem;
          font-weight: bold;
          color: #00e5ff;

          span {
            color: #ff71ce;
          }
        }

        ul {
          display: flex;
          list-style: none;
          gap: 1.5rem;

          .nav-link {
            color: #e0f7fa;
            text-decoration: none;
            font-weight: bold;

            &:hover,
            &.active {
              color: #00ffc6;
            }
          }
        }
      }

      .settings-page {
        padding: 2rem;
        max-width: 800px;
        margin: auto;

        h1 {
          font-size: 2rem;
          color: #00e5ff;
          margin-bottom: 2rem;
        }

        .settings-section {
          margin-bottom: 2rem;

          h2 {
            font-size: 1.2rem;
            color: #ff71ce;
            margin-bottom: 1rem;
          }

          .setting-item {
            display: flex;
            flex-direction: column;
            margin-bottom: 1rem;

            label {
              margin-bottom: 0.5rem;
              color: #7fd0ff;
              font-weight: bold;
            }

            input,
            select {
              background: #1a1a2f;
              border: 1px solid #00e5ff88;
              border-radius: 6px;
              padding: 0.75rem;
              color: #fff;
              font-family: inherit;
            }

            input[type="checkbox"] {
              width: auto;
            }
          }
        }

        .save-btn {
          background: #00e5ff;
          border: none;
          padding: 1rem 2rem;
          color: #0e0e1b;
          font-weight: bold;
          font-size: 1rem;
          border-radius: 6px;
          cursor: pointer;
          transition: background 0.3s;

          &:hover {
            background: #00ffc6;
          }
        }
      }

      .modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: none;
        background: rgba(0, 0, 0, 0.7);
        justify-content: center;
        align-items: center;
        z-index: 999;

        .modal-content {
          background: #161625;
          padding: 2rem;
          border-radius: 8px;
          text-align: center;
          border: 1px solid #00e5ff;
          color: #00ffc6;

          button {
            margin-top: 1rem;
            padding: 0.5rem 1.5rem;
            background: #00e5ff;
            border: none;
            border-radius: 6px;
            font-family: 'Orbitron', sans-serif;
            cursor: pointer;

            &:hover {
              background: #00ffc6;
            }
          }
        }
      }
    </style>
  </body>
</html>
